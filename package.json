{
  "name": "@shren/faustwasm",
  "version": "0.0.9",
  "description": "WebAssembly version of Faust Compiler",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "npm run build-cjs & npm run build-esm & npm run build-esm-bundle & npm run build-types & npm run build-types-bundle",
    "build-cjs": "esbuild src/index.ts --target=es2020 --bundle --sourcemap --outdir=dist --format=cjs",
    "build-esm": "esbuild src/index.ts --target=es2020 --bundle --sourcemap --outdir=dist/esm --format=esm --external:fs/promises --external:url",
    "build-esm-bundle": "esbuild src/bundle.ts --target=es2020 --bundle --sourcemap --loader:.wasm=binary --loader:.data=binary --outfile=dist/esm-bundle/index.js --format=esm --external:fs --external:path",
    "build-types": "dts-bundle-generator -o dist/index.d.ts src/index.ts --external-imports",
    "build-types-bundle": "dts-bundle-generator -o dist/esm-bundle/index.d.ts src/bundle.ts --external-imports",
    "postbuild": "node postbuild.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Fr0stbyteR/faustwasm.git"
  },
  "keywords": [
    "faust",
    "webassembly"
  ],
  "author": "Grame-CNCM",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Fr0stbyteR/faustwasm/issues"
  },
  "homepage": "https://github.com/Fr0stbyteR/faustwasm#readme",
  "devDependencies": {
    "@shren/faust-ui": "^1.1.1",
    "@types/emscripten": "^1.39.5",
    "@types/node": "^16.11.7",
    "@types/webmidi": "^2.0.6",
    "dts-bundle-generator": "^6.0.0",
    "esbuild": "^0.13.13",
    "js-sha256": "^0.9.0",
    "typescript": "^4.4.4"
  }
}
